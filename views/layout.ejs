<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/layout.css" type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.js" type="text/javascript"></script>

    <%- style %>
</head>

<body>
    <%- include('./_header.ejs'); %>
        <!-- <% if (flash.success && flash.success.length > 0) { %>
            <h2>
                <%= flash.success %>
            </h2>
            <% } %> -->
        <main>
            <%- body %>
        </main>
        <%- include('./_footer.ejs'); %>
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
            </script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
            </script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
            </script>
            <script src="https://code.jquery.com/jquery-3.5.0.js" integrity="sha256-r/AaFHrszJtwpe+tHyNi/XCfMxYpbsRg2Uqn0x3s2zc=" crossorigin="anonymous"></script>
            <%- script %>

                <script>
                    let flashSuccess = "<%= flash.success %>";
                    let flashError = "<%= flash.error %>"
                    let flashInfo = "<%= flash.info %>"

                    if (flashSuccess && flashSuccess.length > 0) {
                        new Noty({
                            theme: 'mint',
                            timeout: 1500,
                            type: 'success',
                            layout: 'topRight',
                            text: `${flashSuccess}`
                        }).show();
                    }

                    if (flashInfo && flashInfo.length > 0) {
                        new Noty({
                            theme: 'mint',
                            timeout: 1500,
                            type: 'info',
                            layout: 'topRight',
                            text: `${flashInfo}`
                        }).show();
                    }

                    if (flashError && flashError.length > 0) {
                        new Noty({
                            theme: 'mint',
                            timeout: 1500,
                            type: 'error',
                            layout: 'topRight',
                            text: `${flashError}`
                        }).show();
                    }
                </script>


</body>

</html>