<div id="heading">Sign In</div>
<form action="/users/create-session" method="POST" class="post-form-container">
    <input type="email" placeholder="Your email" name="email" required>
    <input type="password" placeholder="Password" name="password" required>
    <input type="submit" value="Sign In">
</form>

<section class="short-divider"></section>

<section id="google-sign-in" class="center">
    <a href="/users/auth/google">
        <span> Sign in/ up with Google</span>
    </a>
</section>

<section class="center" id="reset-password">
    <a href="/users/reset-password">
        <span> Forgot Password ?</span>
    </a>
</section>